# -*- mode: sh; -*-

if exists xiwi; then
    alias subl='LANG=en_US.UTF-8 xiwi subl -w'
fi

if ! exists sudoedit; then
    alias sudoedit='sudo -e'
fi

alias ls="ls --color=auto"

alias tmux="tmux -2 -u"

alias brtest="brew install hello && brew test hello && brew rm hello"

alias be="bundle exec"

alias todos='grep -n "TODO" *'

alias vi="vi -u $HOME/.exrc"

if ! exists pbcopy; then
    if exists xclip; then
        alias pbcopy='xclip -selection clipboard'
        alias pbpaste='xclip -selection clipboard -o'
    elif exists xsel; then
        alias pbcopy='xsel --clipboard --input'
        alias pbpaste='xsel --clipboard --output'
    fi
fi

# vim:filetype=sh
